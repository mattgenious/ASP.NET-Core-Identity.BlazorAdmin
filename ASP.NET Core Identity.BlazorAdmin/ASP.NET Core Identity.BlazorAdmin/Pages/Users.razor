@page "/users"
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Users</h1>
        </div>
    </div>
    @if (applicationUsers != null)
    {
        <div class="row">
            <div class="col">
                <DataGrid TItem="IdentityUser"
                          Data="@applicationUsers"
                          TotalItems="@applicationUsers.Count"
                          ShowPager="true"
                          PageSize="30"
                          Filterable="true"
                          Responsive="true"
                          Bordered="true">
                    <DataGridColumn TItem="IdentityUser" Field="@nameof(IdentityUser.Id)" Caption="Id"/>
                    <DataGridColumn TItem="IdentityUser" Field="@nameof(IdentityUser.Email)" Caption="Email"/>
                </DataGrid>
            </div>
        </div>
    }
</div>


@code
{
    [Inject]
    UserManager<IdentityUser> UserManager { get; set; }

    [Inject]
    NavigationManager Navigation { get; set; }

    List<IdentityUser> applicationUsers;

    protected override async Task OnInitializedAsync()
    {
        applicationUsers = await UserManager.Users.ToListAsync().ConfigureAwait(false);
    }
}